{{!-- This is the post loop - each post will be output using this markup --}}
{{#foreach posts}}
<article class="{{post_class}} row">
  <header class="col-lg-4">
{{#xif "_.findIndex(tags, function(o) { return o.slug == 'melmelboo-voyage'}) !== -1" }}
  {{#xif "_.startsWith(url, '/blog') && url.indexOf('/art-') === -1" }}
    <a href="//www.melmelboo-voyage.fr{{url}}">
  {{ else }}
    {{#xif "!_.startsWith(url, '/blog') && url.indexOf('/art-') === -1" }}
      <a href="//www.melmelboo-voyage.fr/blog{{#x "_.replace(url, '/blog/blog/', '/blog/')"}}{{/x}}">
    {{ else }}
      <a href="//www.melmelboo-voyage.fr{{#x "_.replace(url, /(\/blog)?\/art-(.*)-\d+\//, '/blog/$2')"}}{{/x}}">
    {{/xif}}
  {{/xif}}
{{ else }}
    <a href="{{url}}">
{{/xif}}
      <img style="width:92%;" alt="{{title}}" src="{{image}}" />
    </a>
  </header>
  <section class="post-excerpt col-lg-8">
{{#xif "_.findIndex(tags, function(o) { return o.slug == 'melmelboo-voyage'}) !== -1" }}
  {{#xif "_.startsWith(url, '/blog') && url.indexOf('/art-') === -1" }}
    <a href="//www.melmelboo-voyage.fr{{url}}">
  {{ else }}
    {{#xif "!_.startsWith(url, '/blog') && url.indexOf('/art-') === -1" }}
      <a href="//www.melmelboo-voyage.fr/blog{{#x "_.replace(url, '/blog/blog/', '/blog/')"}}{{/x}}">
    {{ else }}
      <a href="//www.melmelboo-voyage.fr{{#x "_.replace(url, /(\/blog)?\/art-(.*)-\d+\//, '/blog/$2')"}}{{/x}}">
    {{/xif}}
  {{/xif}}
{{ else }}
    <a href="{{url}}">
{{/xif}}
      <h2 class="post-title">{{title}}</h2>
      <p>{{excerpt words="45"}}...</p>
      <p class="read-more">Lire la suite â†’</p>
    </a>
  </section>
</article>
{{/foreach}}

<div class="clearfix"></div>
